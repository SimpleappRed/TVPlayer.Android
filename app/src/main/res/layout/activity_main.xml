<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/media_frame"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/tv_logo_trans"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:layout_margin="0dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/now_playing_ball"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:elevation="3dp"
        app:cardCornerRadius="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/channel_logo_ball"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/play_button_ball"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="1dp"
                />

            <TextView
                android:id="@+id/net_speed_ball"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="8sp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/now_playing_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:background="@color/colorLightLightGray"
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@+id/app_title_bar"
        app:layout_constraintBottom_toTopOf="@id/media_frame"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="4dp"
                android:paddingVertical="3dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    >
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/play_button_bar"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:id="@+id/net_speed_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="8sp"/>
                </FrameLayout>

                <ImageView
                    android:id="@+id/channel_logo_bar"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/round_outline"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/channel_name_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textColor="@color/colorDarkDarkGray"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textChannelInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:textSize="9sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/source_info_card_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="8dp"
                    android:elevation="2dp"
                    app:cardCornerRadius="8dp"
                    >
                    <TextView
                        android:id="@+id/source_info_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>


                <ImageView
                    android:id="@+id/fav_icon_bar"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/country_flag_bar"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:id="@+id/media_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title_bar">
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/channel_name_media_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorLightGray"
                android:padding="5dp"
                android:textSize="22sp"
                android:textStyle="normal"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/loading_pic_media_frame"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/net_speed_media_frame"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:layout_gravity="center"
                    android:textColor="@color/colorLightGray"
                    android:textSize="18sp"
                    android:layout_marginStart="-45dp"
                    android:layout_marginEnd="2dp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:textStyle="normal"
                    android:text=""/>
                <TextView
                    android:id="@+id/buffer_percentage_media_frame"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:layout_gravity="center"
                    android:textColor="@color/colorLightGray"
                    android:textSize="18sp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text=""
                    android:textStyle="normal" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
    <View
        android:id="@+id/listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/media_frame"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/listDivider2"
        app:layout_constraintTop_toBottomOf="@+id/listDivider"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        >
    </FrameLayout>

    <View
        android:id="@+id/listDivider2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_container" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation"
        app:itemIconSize="26dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintTop_toBottomOf="@id/listDivider2"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>